<div
    class="mx-auto flex flex-row justify-center max-w-lg md:mb-8 mt-4 bg-white rounded-lg items-center relative md:p-0 p-8">
    <div class="h-full relative">
        <div class="py-2 px-2">
            <div class="flex justify-between items-center py-2">
                <div class="relative mt-1 flex">
                    <div class="ml-3 flex justify-start flex-col items-start">
                        <p class="text-gray-600 text-xs">
                            Correo del organizador: {{entity.organizador}}
                        </p>
                    </div>
                    {% if user.email == entity.organizador%}

                    <div>
                        <a href="/editar/{{entity.id}}"
                            class=" mx-6 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Editar</a>
                    </div>
                    <div>
                        <a href="/borrar/{{entity.id}}"
                            class=" mx-6 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Borrar</a>
                    </div>
                    {% endif %}
                </div>

            </div>
        </div>
        <hr />
        <div>
            <h3 class="text-lg text-center font-bold">Nombre del evento: {{entity.name}}</h3>
        </div>
        <div class="relative w-full h-full">
            <img src={{entity.images}} class="w-full h-full object-cover">
        </div>
        <div>
            <hr />
            <div class="p-2 flex flex-col space-y-3 flex flex-row">
                <div>
                    <p class="font-normal text-xs text-gray-500">Fecha y hora del evento: {{entity.timestamp}}</p>
                </div>
                {% if entities_list != undefined%}
                <div class="mx-auto bg-white">
                    <a href="/mostrar/{{entity.id}}"
                        class=" mx-6 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ver m√°s
                        detalles</a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>